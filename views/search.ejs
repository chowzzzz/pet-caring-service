<!DOCTYPE html>
<html>

<head>
	<%- include('./partials/head'); %>
	<script src="javascripts/searchScript.js"></script>
</head>

<body>
	<%- include('./partials/navbar'); %>
	<main>
		<div class="container rounded bg-white pl-5 pr-5 pt-3 pb-3">
			<h1>Caretaker Search</h1>
			<br>
			<div class="d-flex flex-row justify-content-between">
				<form id="html_form" action="search" role="form" method="post">
					<div class="d-flex flex-column">
						<div class="d-flex flex-row w-50">
							<span class="m-2">Dates:</span>
							<input type="date" class="form-control" id="start" name="start" required></input>
							<span class="m-2">-</span>
							<input type="date" class="form-control" id="end" name="end" required></input>
						</div>
						<br>
						<div class="w-50">
							<button type="button" id="toggler" class="btn btn-outline-info btn-sm w-50"
								onclick="toggleOptional()">Add Filters</button>
						</div>
					</div>
					<br>
					<div id="optional" style="display: none">
						<div class="d-flex flex-row justify-content-between">
							<span class="m-2">Username:</span>
							<input type="text" class="form-control" id="username" name="username"
								placeholder="Enter username">
							<span class="m-2">Name:</span>
							<input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
						</div>
						<br>
					</div>
					<div>
						<button type="submit" class="btn btn-primary btn-lg">Search</button>
					</div>
				</form>
			</div>
			<br>
			<span> Found <%= data.length%> results </span>
			<% for(var i=0; i<data.length; i++) { %>
			<div class="row rounded border p-3 mb-2">
				<div class="col-sm">
					<span> <b><%= data[i].username%></b></span> <br>
					<span><%= data[i].name%></span>
				</div>
				<div class="col-sm" align="left">
					<span> Rating: <%= data[i].avgrating%></span> <br>
				</div>
				<div class="col-sm" align="right">
					<form id="html_form" action="caretaker-details" role="form" method="post">
						<button type="submit" id=username name=username class="btn btn-primary btn-lg"
							value="<%= data[i].username%>">Check
							details</button>
					</form>
				</div>
			</div>
			<% } %>
		</div>
	</main>
</body>

</html>