<!DOCTYPE html>
<html lang="en">

<head>
	<link rel="stylesheet" href="/stylesheets/profile.css" />
	<%- include('./partials/head'); %>
</head>

<body>
	<%- include('./partials/navbar'); %>
	<main>
		<div class="container rounded bg-white pl-5 pr-5 pt-3 pb-3">
			<h1>Confirm bidding for <%= username %></h1>
			<p><b>For dates <%= start %> to <%= end %> and category <%= category %></b></p>
			<% let url = "register-job?username=" + username + "&start=" + start + "&end=" + end;%>
			<form id="html_form" action="" role="form" method="post">
				<div class="form-group w-75 mb-2">
					<label for="petname">Pet to be cared for</label>
					<select class="form-control">
						<% for (var i = 0; i < pets.length; i++) { %>
						<div>
							<label class="form-control-label" for="POD">
								<option class="form-check-input" type="radio" id="<%= pets[i].name%>"
									value="<%= pets[i].name%>" name="petname" required><%= pets[i].name%></option>
							</label>
						</div>
						<% } %>
					</select>
				</div>
				<div class="form-group w-75 mb-2">
					<label for="delivery">Pet delivery method</label>
					<select class="form-control">
						<div>
							<label class="form-control-label" for="POD">
								<option class="form-check-input" type="radio" id="POD" value="POD" name="delivery"
									required>Pet owner delivery</option>
							</label>
						</div>
						<div>
							<label class="form-control-label" for="CTP">
								<option class="form-check-input" type="radio" id="CTP" value="CTP" name="delivery">
									Caretaker pickup</option>
							</label>
						</div>
						<div>
							<label class="form-control-label" for="PTB">
								<option class="form-check-input" type="radio" id="PTB" value="PTB" name="delivery">PCS
									building transfer</option>
							</label>
						</div>
					</select>
				</div>
				<div class="form-group w-75 mb-2">
					<label for="payment">Payment method</label>
					<div class="form-check">
						<div class="radio">
							<label class="form-check-label" for="CASH"><input class="form-check-input" type="radio"
									id="CASH" value="CASH" name="payment" required>Cash</label>
						</div>
						<div class="radio">
							<label class="form-check-label" for="CREDITCARD"><input class="form-check-input"
									type="radio" id="CREDITCARD" value="CREDITCARD" name="payment">Credit card</label>
						</div>
					</div>
				</div>
				<div class="form-group w-75 mb-3">
					<button type="submit" class="btn btn-primary">Bid!</button>
			</form>
		</div>
	</main>
</body>

</html>